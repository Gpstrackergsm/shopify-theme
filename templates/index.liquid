<section class="section section--testimonials" aria-labelledby="TestimonialsHeading">
  <div class="section__header">
    <h2 id="TestimonialsHeading" class="section__heading">{{ 'templates.index.testimonials_heading' | t }}</h2>
    <p class="section__subheading">{{ 'templates.index.testimonials_subheading' | t }}</p>
  </div>
  <div class="testimonial-grid" role="list">
    <figure class="testimonial" role="listitem">
      <blockquote class="testimonial__quote">{{ 'templates.index.testimonial_quote_one' | t }}</blockquote>
      <figcaption class="testimonial__author">{{ 'templates.index.testimonial_author_one' | t }}</figcaption>
    </figure>
    <figure class="testimonial" role="listitem">
      <blockquote class="testimonial__quote">{{ 'templates.index.testimonial_quote_two' | t }}</blockquote>
      <figcaption class="testimonial__author">{{ 'templates.index.testimonial_author_two' | t }}</figcaption>
    </figure>
    <figure class="testimonial" role="listitem">
      <blockquote class="testimonial__quote">{{ 'templates.index.testimonial_quote_three' | t }}</blockquote>
      <figcaption class="testimonial__author">{{ 'templates.index.testimonial_author_three' | t }}</figcaption>
    </figure>
  </div>
</section>

<section class="section section--newsletter" aria-labelledby="NewsletterHeading">
  <div class="newsletter">
    <div class="newsletter__content">
      <h2 id="NewsletterHeading" class="section__heading">{{ 'templates.index.newsletter_heading' | t }}</h2>
      <p class="section__subheading">{{ 'templates.index.newsletter_subheading' | t }}</p>
      <p class="newsletter__note">{{ 'templates.index.newsletter_note' | t }}</p>
    </div>
    {% form 'customer', id: 'NewsletterSignup', class: 'newsletter__form' %}
      <div class="newsletter__inputs">
        <label for="NewsletterEmail">
          <span class="visually-hidden">{{ 'templates.index.newsletter_email_label' | t }}</span>
          <input
            id="NewsletterEmail"
            type="email"
            name="contact[email]"
            autocomplete="email"
            autocapitalize="off"
            placeholder="{{ 'templates.index.newsletter_email_placeholder' | t }}"
            required
          >
        </label>
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="contact[tags]" value="newsletter">
      </div>
      <button class="button button--primary" type="submit">{{ 'templates.index.newsletter_cta' | t }}</button>
      {% if form.posted_successfully? %}
        <p class="newsletter__message" role="status">{{ 'templates.index.newsletter_success' | t }}</p>
      {% elsif form.errors %}
        <p class="newsletter__message" role="alert">{{ 'templates.index.newsletter_error' | t }}</p>
      {% endif %}
    {% endform %}
  </div>
</section>
