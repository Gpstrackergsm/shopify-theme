{%- comment -%}
  Fashion-forward landing page featuring editorial storytelling, hero imagery, curated collections, and brand signals.
{%- endcomment -%}

<section class="hero" aria-labelledby="HeroTitle">
  <div class="hero__content">
    <p class="hero__eyebrow">{{ 'templates.index.hero_eyebrow' | t }}</p>
    <h1 id="HeroTitle" class="hero__title">{{ 'templates.index.hero_title' | t }}</h1>
    <p class="hero__subtitle">{{ 'templates.index.hero_subtitle' | t }}</p>
    <div class="hero__actions">
      <a class="button button--primary" href="/collections/all">{{ 'templates.index.hero_cta_primary' | t }}</a>
      <a class="button button--ghost" href="#StorySection">{{ 'templates.index.hero_cta_secondary' | t }}</a>
    </div>
  </div>
  <div class="hero__media" role="presentation" aria-hidden="true">
    <span class="hero__media-highlight">{{ 'templates.index.hero_media_caption' | t }}</span>
  </div>
</section>

<section id="StorySection" class="section section--story" aria-labelledby="StoryHeading">
  <div class="section__grid">
    <div>
      <h2 id="StoryHeading" class="section__heading">{{ 'templates.index.story_heading' | t }}</h2>
      <p class="section__subheading">{{ 'templates.index.story_subheading' | t }}</p>
    </div>
    <div class="story__content">
      <p>{{ 'templates.index.story_body_1' | t }}</p>
      <p>{{ 'templates.index.story_body_2' | t }}</p>
      <a class="link-inline" href="/pages/about">{{ 'templates.index.story_link' | t }}</a>
    </div>
  </div>
</section>

<section class="section section--collections" aria-labelledby="CollectionsHeading">
  <div class="section__header">
    <h2 id="CollectionsHeading" class="section__heading">{{ 'templates.index.collections_heading' | t }}</h2>
    <p class="section__subheading">{{ 'templates.index.collections_subheading' | t }}</p>
  </div>
  <div class="collection-grid" role="list">
    <article class="collection-card" role="listitem">
      <div class="collection-card__media collection-card__media--new-arrivals" aria-hidden="true"></div>
      <div class="collection-card__content">
        <h3 class="collection-card__title">{{ 'templates.index.collection_new_arrivals_title' | t }}</h3>
        <p class="collection-card__description">{{ 'templates.index.collection_new_arrivals_copy' | t }}</p>
        <a class="link-inline" href="/collections/new">{{ 'templates.index.collection_shop_link' | t }}</a>
      </div>
    </article>
    <article class="collection-card" role="listitem">
      <div class="collection-card__media collection-card__media--essentials" aria-hidden="true"></div>
      <div class="collection-card__content">
        <h3 class="collection-card__title">{{ 'templates.index.collection_essentials_title' | t }}</h3>
        <p class="collection-card__description">{{ 'templates.index.collection_essentials_copy' | t }}</p>
        <a class="link-inline" href="/collections/essentials">{{ 'templates.index.collection_shop_link' | t }}</a>
      </div>
    </article>
    <article class="collection-card" role="listitem">
      <div class="collection-card__media collection-card__media--atelier" aria-hidden="true"></div>
      <div class="collection-card__content">
        <h3 class="collection-card__title">{{ 'templates.index.collection_atelier_title' | t }}</h3>
        <p class="collection-card__description">{{ 'templates.index.collection_atelier_copy' | t }}</p>
        <a class="link-inline" href="/collections/signature">{{ 'templates.index.collection_shop_link' | t }}</a>
      </div>
    </article>
  </div>
</section>

