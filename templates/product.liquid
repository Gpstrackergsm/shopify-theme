<section class="formula" itemscope itemtype="https://schema.org/Product">
  <div class="formula__hero" id="Product-{{ product.id }}">
    <div class="formula__hero-grid">
      <div class="formula__hero-copy">
        <span class="formula__tag">Digital workbook ¬∑ Instant download</span>
        <h1 class="formula__headline" itemprop="name">Discover the viral 18-10-8-4-1 formula that‚Äôs transforming lives worldwide.</h1>
