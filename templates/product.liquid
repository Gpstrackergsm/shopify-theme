{%- comment -%}
  Product template displaying images, product information, and add-to-cart form.
{%- endcomment -%}
<section class="product-landing" itemscope itemtype="https://schema.org/Product">
  <div class="product-landing__hero" id="Product-{{ product.id }}">
    <div class="product-landing__copy">
      <p class="product-landing__eyebrow">The 21-Day Challenge Workbook</p>
      <h1 class="product-landing__title" itemprop="name">Discover the viral 18-10-8-4-1 formula that‚Äôs transforming lives worldwide.</h1>
      <p class="product-landing__lede" itemprop="description">
        This 25-page digital workbook helps you lose up to 7 kg in 3 weeks through a simple daily system: 18 hours fasting, 10 000 steps, 8 hours sleep, 4 liters hydration, and 1 gram of protein per kg. Track your progress, stay motivated, and reset your body naturally ‚Äî no starvation, no confusion, just results.
      </p>
      <ul class="product-landing__highlights">
        <li>üìò Structured 25-page workbook with checklists and reflection prompts.</li>
        <li>üß† Science-backed routine designed to reset your metabolism without guesswork.</li>
        <li>üí™ Built-in habit trackers to keep you accountable every single day.</li>
      </ul>
      <div class="product-landing__purchase" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        <div class="product-landing__price">
          <span class="product-landing__price-label">Instant download</span>
          <div class="product-landing__price-value">
            <link itemprop="availability" href="https://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">
            <span itemprop="priceCurrency" content="{{ cart.currency.iso_code }}"></span>
            <span itemprop="price">{{ product.price | money }}</span>
          </div>
        </div>
        {% form 'product', product, class: 'product-landing__form' %}
          {% unless product.has_only_default_variant %}
            <div class="product-landing__options">
              {% for option in product.options_with_values %}
                <label for="Option-{{ option.position }}">{{ option.name }}</label>
                <select id="Option-{{ option.position }}" name="options[{{ option.name }}]">
                  {% for value in option.values %}
                    <option value="{{ value | escape }}"{% if option.selected_value == value %} selected{% endif %}>{{ value }}</option>
                  {% endfor %}
                </select>
              {% endfor %}
            </div>
          {% endunless %}
          <div class="product-landing__actions">
            <label for="Quantity-{{ product.id }}" class="visually-hidden">{{ 'products.product.quantity' | t }}</label>
            <input id="Quantity-{{ product.id }}" name="quantity" type="number" min="1" value="1">
            <button type="submit" class="button button--primary" {% unless product.available %}disabled{% endunless %}>
              {% if product.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </button>
          </div>
        {% endform %}
        <p class="product-landing__guarantee">üîí Secure checkout ¬∑ üì• Instant access ¬∑ ‚ôªÔ∏è Lifetime updates included</p>
      </div>
    </div>
    <div class="product-landing__media">
      {% if product.featured_media %}
        <figure class="product-landing__figure" data-media-type="{{ product.featured_media.media_type }}">
          {{ product.featured_media | media_tag: image_size: "1024x" }}
        </figure>
      {% elsif product.media.size > 0 %}
        {% assign first_media = product.media.first %}
        <figure class="product-landing__figure" data-media-type="{{ first_media.media_type }}">
          {{ first_media | media_tag: image_size: "1024x" }}
        </figure>
      {% else %}
        <div class="product-landing__placeholder" role="presentation"></div>
      {% endif %}
    </div>
  </div>

  <div class="product-landing__formula" aria-labelledby="formula-heading">
    <h2 id="formula-heading">Your daily 18-10-8-4-1 rhythm</h2>
    <div class="product-landing__formula-grid">
