{%- comment -%}
  The main layout file that structures the HTML document and injects theme-wide assets.
{%- endcomment -%}
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% if page_title %}{{ page_title }}{% else %}{{ shop.name }}{% endif %}</title>
    <meta name="description" content="{{ shop.meta_description | escape }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}" media="all">
    <style>
      :root {
        --color-accent: {{ settings.brand_primary_color }};
        --color-background: {{ settings.brand_background_color }};
      }
    </style>
    {{ content_for_header }}
  </head>
  <body class="no-js">
    <a class="skip-to-content" href="#MainContent">{{ 'accessibility.skip_to_content' | t }}</a>
    {% section 'header' %}
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>
    {% section 'footer' %}
    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
